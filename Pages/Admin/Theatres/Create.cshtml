@page
@model TeamProject.Pages.Admin.Theatres.CreateModel
@{
}

<form method="post">
<div class="border p-3 mt-4">
    <div class="row pb-2">
         <h2 class="text-primary pl-3">Create New Theatre</h2>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Theatre.TheatreNum"></label>
        <input asp-for="@Model.Theatre.TheatreNum" class="form-control"/>
            <span asp-validation-for="@Model.Theatre.TheatreNum" class="text-danger"></span>
    </div>
        <div class="mb-3">
            <label asp-for="@Model.Theatre.Capacity"></label>
            <input asp-for="@Model.Theatre.Capacity" class="form-control" />
            <span asp-validation-for="@Model.Theatre.Capacity" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Create</button>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
     }
} 