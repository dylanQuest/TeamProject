@page
@model TeamProject.Pages.Admin.Screenings.CreateModel
@{
}

<form method="post">
<div class="border p-3 mt-4">
    <div class="row pb-2">
         <h2 class="text-primary pl-3">Create New Screening</h2>
    </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.filmId"></label>
            <select asp-for="@Model.Screening.filmId" asp-items="@Model.FilmList" class="form-control">
                <option disabled selected="selected Film ---"> </option>
            </select>
            <span asp-validation-for="@Model.Screening.filmId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.theatreId"></label>
            <select asp-for="@Model.Screening.theatreId" asp-items="@Model.TheatreList" class="form-control">
                <option disabled selected="selected Theatre ---"> </option>
            </select>
            <span asp-validation-for="@Model.Screening.theatreId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.Date"></label>
            <input asp-for="@Model.Screening.Date" class="form-control" />
            <span asp-validation-for="@Model.Screening.Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.seatsRemaining"></label>
            <input asp-for="@Model.Screening.seatsRemaining" class="form-control" />
            <span asp-validation-for="@Model.Screening.seatsRemaining" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Create</button>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
     }
} 