@page
@model TeamProject.Pages.Admin.Screenings.DeleteModel
@{
}

<form method="post">
<input hidden asp-for="Screening.Id"/>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Film</h2>
    </div>

        <div class="mb-3">
            <label asp-for="@Model.Screening.Id"></label>
            <input asp-for="@Model.Screening.Id" class="form-control" />
            <span asp-validation-for="@Model.Screening.Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.Date"></label>
            <input asp-for="@Model.Screening.Date" class="form-control" />
            <span asp-validation-for="@Model.Screening.Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.seatsRemaining"></label>
            <input asp-for="@Model.Screening.seatsRemaining" class="form-control" />
            <span asp-validation-for="@Model.Screening.seatsRemaining" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}
