@page
@model TeamProject.Pages.Films.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Films</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Add New Film
            </a>
        </div>
    </div>
</div>

<br /> <br /> <br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Films</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Age Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.Films)
        {
            <tr>
                <td width="40%">@obj.FilmName</td>
                <td width="40%">@obj.Description</td>
                <td width="40%">@obj.Duration</td>
                <td width="40%">@obj.ageRating</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a>
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>