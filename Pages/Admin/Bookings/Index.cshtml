@page
@model TeamProject.Pages.Bookings.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Bookings</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Add New Booking
            </a>
        </div>
    </div>
</div>

<br /> <br /> <br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Seat Amount</th>
            <th>Cost</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.Bookings)
        {
            <tr>
                <td width="40%">@obj.SeatAmount</td>
                <td width="40%">@obj.Cost</td>
                <td width="40%">@obj.Email</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a>
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>