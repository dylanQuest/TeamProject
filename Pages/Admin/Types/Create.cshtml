@page
@model TeamProject.Pages.Admin.Types.CreateModel
@{
}

<form method="post">
<div class="border p-3 mt-4">
    <div class="row pb-2">
         <h2 class="text-primary pl-3">Create New Ticket Type</h2>
    </div>
        <div class="mb-3">
            <label asp-for="@Model.Type.TypeName"></label>
            <input asp-for="@Model.Type.TypeName" class="form-control" />
            <span asp-validation-for="@Model.Type.TypeName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Type.Cost"></label>
            <input asp-for="@Model.Type.Cost" class="form-control" />
            <span asp-validation-for="@Model.Type.Cost" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Create</button>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
     }
} 