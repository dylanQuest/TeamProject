@page
@model TeamProject.Pages.Admin.Types.DeleteModel
@{
}

<form method="post">
<input hidden asp-for="Type.Id"/>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Type</h2>
    </div>

        <div class="mb-3">
            <label asp-for="@Model.Type.TypeName"></label>
            <input asp-for="@Model.Type.TypeName" class="form-control" />
            <span asp-validation-for="@Model.Type.TypeName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Type.Cost"></label>
            <input asp-for="@Model.Type.Cost" class="form-control" />
            <span asp-validation-for="@Model.Type.Cost" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}
